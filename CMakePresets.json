{
    "version": 8,
    "configurePresets": [
        {
            "name": "windows",
            "displayName": "windows x64工具链配置预设(测试用)",
            "description": "设置 Ninja 生成器、版本和安装目录，同时启用 vcpkg（需要设置 VCPKG_ROOT 环境变量）",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/CMakeToolchain/x64-mingw-toolchain.cmake",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "rkarm",
            "displayName": "arm64 工具链配置预设",
            "description": "设置 Ninja 生成器、版本和安装目录",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/CMakeToolchain/x64-arm64-toolchain.cmake",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "linux64",
            "displayName": "Linux x64 工具链配置预设",
            "description": "设置 Ninja 生成器、版本和安装目录",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/CMakeToolchain/x64-linux-toolchain.cmake",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        }
    ]
}